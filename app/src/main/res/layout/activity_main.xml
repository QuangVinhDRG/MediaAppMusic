<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_music_app"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên bài hát"
        android:textColor="#fff"
        android:textSize="22sp"
        android:padding="5dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/tvArtist"
        android:textAlignment="center"
        android:layout_below="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nghệ sĩ"
        android:textColor="#fff"
        android:textSize="20sp"
        android:padding="5dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="150dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/ivSong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ngo_cham_img"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp">
        <ImageButton
            android:id="@+id/ibPrev"
            android:background="@null"
            android:src="@drawable/previous_button_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="32dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"/>
        <ImageButton
            android:id="@+id/ibRewind"
            android:background="@null"
            android:layout_toLeftOf="@id/ibPlay"
            android:layout_marginRight="45dp"
            android:src="@drawable/rewind_button_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"/>
        <ImageButton
            android:id="@+id/ibPlay"
            android:background="@null"
            android:src="@drawable/play_button_icon"
            android:layout_centerHorizontal="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"/>
        <ImageButton
            android:id="@+id/ibForward"
            android:background="@null"
            android:layout_toRightOf="@id/ibPlay"
            android:layout_marginLeft="45dp"
            android:src="@drawable/forward_button_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"/>
        <ImageButton
            android:id="@+id/ibNext"
            android:background="@null"
            android:src="@drawable/next_button_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"/>
    </RelativeLayout>
    <SeekBar
        android:id="@+id/sbTimeline"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/controller"
        android:layout_marginBottom="35dp"
        android:thumbTint="@color/white"
        android:progressTint="@color/white"/>
    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_above="@id/sbTimeline"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_above="@id/sbTimeline"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
</RelativeLayout>